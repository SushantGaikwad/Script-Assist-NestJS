# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=taskflow

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRATION=1d
JWT_ACCESS_SECRET=your-super-secret-access-key-at-least-32-chars
JWT_REFRESH_SECRET=your-different-super-secret-refresh-key-at-least-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=taskflow-api
JWT_AUDIENCE=taskflow-client

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=taskflow
REDIS_KEY_PREFIX=taskflow

# App
PORT=3000
NODE_ENV=development 

#Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000